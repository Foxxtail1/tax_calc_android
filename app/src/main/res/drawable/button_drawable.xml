<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_colors"/>
            <stroke
                android:width="2dp"
                android:color="@color/buttonBorder"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:bottom="@dimen/buttonPadding"
                android:left="@dimen/buttonPadding"
                android:right="@dimen/buttonPadding"
                android:top="@dimen/buttonPadding"/>
        </shape>
    </item>
</selector>